# For development/testing purposes
ARG python_version=3.12
FROM python:${python_version}
ARG USERID=1000
RUN set -ex && \
  pip install -U flit && \
  groupadd -r app && \
  useradd --uid=${USERID} --create-home --no-log-init -r -g app app

